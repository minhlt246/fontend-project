extends _layouts/master-vp

block content
    section
        .mt-lg-3.mb-4.px-2
             .row
                    #content-wrapper.flex-grow-1.d-flex.flex-column
                        // Main Content
                        #content
                            // Topbar
                            nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.shadow
                                // Topbar Search
                                form.d-none.d-sm-inline-block.form-inline.me-auto.my-2.my-md-0.mw-100.navbar-search
                                    .input-group
                                        input.form-control.bg-light.border-0.small(type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
                                        button.btn.btn-primary(type='button')
                                            i.fas.fa-search.fa-sm
                                // Topbar Navbar
                                ul.navbar-nav.ms-auto
                                    // Nav Item - Search Dropdown (Visible Only XS)
                                    li.nav-item.dropdown.no-arrow.d-sm-none
                                        a#searchDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            i.fas.fa-search.fa-fw
                                        .dropdown-menu.dropdown-menu-end.p-3.shadow.animated--grow-in(aria-labelledby='searchDropdown')
                                            form.form-inline.me-auto.w-100.navbar-search
                                                .input-group
                                                    input.form-control.bg-light.border-0.small(type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
                                                    button.btn.btn-primary(type='button')
                                                        i.fas.fa-search.fa-sm
                                    // Nav Item - Alerts
                                    li.nav-item.dropdown.no-arrow.mx-1
                                        a#alertsDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            i.fas.fa-bell.fa-fw
                                            span.badge.bg-danger.badge-counter 3+
                                        .dropdown-list.dropdown-menu.dropdown-menu-end.shadow.animated--grow-in(aria-labelledby='alertsDropdown')
                                            h6.dropdown-header Alerts Center
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .me-3
                                                    .icon-circle.bg-primary
                                                        i.fas.fa-file-alt.text-white
                                                div
                                                    .small.text-gray-500 December 12, 2019
                                                    span.font-weight-bold A new monthly report is ready to download!
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .me-3
                                                    .icon-circle.bg-success
                                                        i.fas.fa-donate.text-white
                                                div
                                                    .small.text-gray-500 December 7, 2019
                                                    |                                     $290.29 has been deposited into your account!
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .me-3
                                                    .icon-circle.bg-warning
                                                        i.fas.fa-exclamation-triangle.text-white
                                                div
                                                    .small.text-gray-500 December 2, 2019
                                                    |                                     Spending Alert: We&apos;ve noticed unusually high spending for your account.
                                            a.dropdown-item.text-center.small.text-gray-500(href='#') Show All Alerts
                                    // Nav Item - Messages
                                    li.nav-item.dropdown.no-arrow.mx-1
                                        a#messagesDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            i.fas.fa-envelope.fa-fw
                                            span.badge.bg-danger.badge-counter 7
                                        .dropdown-list.dropdown-menu.dropdown-menu-end.shadow.animated--grow-in(aria-labelledby='messagesDropdown')
                                            h6.dropdown-header Message Center
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .dropdown-list-image.me-3
                                                    img.rounded-circle(src='img/undraw_profile_1.svg' alt='...')
                                                    .status-indicator.bg-success
                                                .font-weight-bold
                                                    .text-truncate Hi there! I am wondering if you can help me with a problem I&apos;ve been having.
                                                    .small.text-gray-500 Emily Fowler &middot; 58m
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .dropdown-list-image.me-3
                                                    img.rounded-circle(src='img/undraw_profile_2.svg' alt='...')
                                                    .status-indicator
                                                div
                                                    .text-truncate
                                                        | I have the photos that you ordered last month, how would you like them sent to you?
                                                    .small.text-gray-500 Jae Chun &middot; 1d
                                            a.dropdown-item.d-flex.align-items-center(href='#')
                                                .dropdown-list-image.me-3
                                                    img.rounded-circle(src='img/undraw_profile_3.svg' alt='...')
                                                    .status-indicator.bg-warning
                                                div
                                                    .text-truncate
                                                        | Last month&apos;s report looks great, I am very happy with the progress so far, keep up the good work!
                                                    .small.text-gray-500 Morgan Alvarez &middot; 2d
                                            a.dropdown-item.text-center.small.text-gray-500(href='#') Read More Messages
                                    .topbar-divider.d-none.d-sm-block
                                    // Nav Item - User Information
                                    li.nav-item.dropdown.no-arrow
                                        a#userDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                            span.mr-2.d-none.d-lg-inline.text-gray-600.small Douglas McGee
                                            img.img-profile.rounded-circle(src='img/undraw_profile.svg')
                                        .dropdown-menu.dropdown-menu-end.shadow.animated--grow-in(aria-labelledby='userDropdown')
                                            a.dropdown-item(href='#')
                                                i.fas.fa-user.fa-sm.fa-fw.me-2.text-gray-400
                                                |                                 Profile
                                            a.dropdown-item(href='#')
                                                i.fas.fa-cogs.fa-sm.fa-fw.me-2.text-gray-400
                                                |                                 Settings
                                            a.dropdown-item(href='#')
                                                i.fas.fa-list.fa-sm.fa-fw.me-2.text-gray-400
                                                |                                 Activity Log
                                            .dropdown-divider
                                            a.dropdown-item(href='#' data-bs-toggle='modal' data-bs-target='#logoutModal')
                                                i.fas.fa-sign-out-alt.fa-sm.fa-fw.me-2.text-gray-400
                                                |                                 Logout
                            // End of Topbar
                            // Begin Page Content
                            .container-fluid
                                // Page Heading
                                .d-sm-flex.align-items-center.justify-content-between.mb-4
                                    h1.h3.mb-0.text-gray-800 Dashboard
                                    a.d-none.d-sm-inline-block.btn.btn-sm.btn-primary.shadow-sm(href='#')
                                        i.fas.fa-download.fa-sm.text-white-50
                                        |  Generate Report
                                // Content Row
                                .row
                                    // Earnings (Monthly) Card Example
                                    .col-xl-3.col-md-6.mb-4
                                        .card.border-left-primary.shadow.h-100.py-2
                                            .card-body
                                                .row.no-gutters.align-items-center
                                                    .col.mr-2
                                                        .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Earnings (Monthly)
                                                        .h5.mb-0.font-weight-bold.text-gray-800 $40,000
                                                    .col-auto
                                                        i.fas.fa-calendar.fa-2x.text-gray-300
                                    // Earnings (Annual) Card Example
                                    .col-xl-3.col-md-6.mb-4
                                        .card.border-left-success.shadow.h-100.py-2
                                            .card-body
                                                .row.no-gutters.align-items-center
                                                    .col.mr-2
                                                        .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Earnings (Annual)
                                                        .h5.mb-0.font-weight-bold.text-gray-800 $215,000
                                                    .col-auto
                                                        i.fas.fa-dollar-sign.fa-2x.text-gray-300
                                    // Tasks Card Example
                                    .col-xl-3.col-md-6.mb-4
                                        .card.border-left-info.shadow.h-100.py-2
                                            .card-body
                                                .row.no-gutters.align-items-center
                                                    .col.mr-2
                                                        .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Tasks
                                                        .row.no-gutters.align-items-center
                                                            .col-auto
                                                                .h5.mb-0.mr-3.font-weight-bold.text-gray-800 50%
                                                            .col
                                                                .progress.progress-sm.mr-2
                                                                    .progress-bar.bg-info(role='progressbar' style='width: 50%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
                                                    .col-auto
                                                        i.fas.fa-clipboard-list.fa-2x.text-gray-300
                                    // Pending Requests Card Example
                                    .col-xl-3.col-md-6.mb-4
                                        .card.border-left-warning.shadow.h-100.py-2
                                            .card-body
                                                .row.no-gutters.align-items-center
                                                    .col.mr-2
                                                        .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Pending Requests
                                                        .h5.mb-0.font-weight-bold.text-gray-800 18
                                                    .col-auto
                                                        i.fas.fa-comments.fa-2x.text-gray-300
                                // Content Row
                                .row
                                    // Area Chart
                                    .col-xl-8.col-lg-7
                                        .card.shadow.mb-4
                                            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                                h6.m-0.font-weight-bold.text-primary Earnings Overview
                                                .dropdown.no-arrow
                                                    a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                                                    .dropdown-menu.dropdown-menu-end.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                                                        .dropdown-header Dropdown Header:
                                                        a.dropdown-item(href='#') Action
                                                        a.dropdown-item(href='#') Another action
                                                        .dropdown-divider
                                                        a.dropdown-item(href='#') Something else here
                                            .card-body
                                                .chart-area
                                                    canvas#myAreaChart.chartjs-render-monitor(width='711' height='320' style='display: block; width: 711px; height: 320px;')
                                    // Pie Chart
                                    .col-xl-4.col-lg-5
                                        .card.shadow.mb-4
                                            .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                                h6.m-0.font-weight-bold.text-primary Revenue Sources
                                                .dropdown.no-arrow
                                                    a#dropdownMenuLink.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                                                        i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                                                    .dropdown-menu.dropdown-menu-end.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                                                        .dropdown-header Dropdown Header:
                                                        a.dropdown-item(href='#') Action
                                                        a.dropdown-item(href='#') Another action
                                                        .dropdown-divider
                                                        a.dropdown-item(href='#') Something else here
                                            .card-body
                                                .chart-pie.pt-4.pb-2
                                                    canvas#myPieChart
                                                .mt-4.text-center.small
                                                    span.me-2
                                                        i.fas.fa-circle.text-primary
                                                        |  Direct
                                                    span.me-2
                                                        i.fas.fa-circle.text-success
                                                        |  Social
                                                    span.me-2
                                                        i.fas.fa-circle.text-info
                                                        |  Referral


